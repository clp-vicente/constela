{
  "name": "constela",
  "version": "1.0.0",
  "description": "cliente de escritorio para gemini",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Vicente Albornoz",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.clpvicente.constela",
    "productName": "Constela",
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "./extraResources/",
        "to": "."
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/constela.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage"
    }
  }
}